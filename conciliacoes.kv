#:import Factory kivy.factory.Factory

<Image>
    source: 'drew.jpg'
    allow_stretch: True
    keep_ratio: False

<Button>
    background_normal: ''
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: (33/255,176/255,247/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [5]

<MySpinnerOption@SpinnerOption>:
    background_color: (166/255, 234/255, 255/255, 1)
    color: (0,0,0,1)
    background_down: ''
    font_size: 16

<LoginWindow>:
    name: "login"

    FloatLayout:
        size: root.width, root.height

        Image:

        Button:
            size_hint: (.4, .7)
            pos_hint: {'x':0.3, 'y':0.15}

        Label:
            text: 'Conciliações'
            pos_hint: {'x':0.4, 'y':0.7}
            color: (1,1,1,1)
            size_hint: (.2, .1)
            font_size: 50
            font_name: 'Impact'

        MDRectangleFlatIconButton:
            icon: "account"
            icon_color: (1,1,1,1)
            id: drop_item
            font_size: 20
            size_hint: (.2, .07)
            pos_hint: {'x':0.4, 'y':0.5}
            text_color: (1,1,1,1)
            md_bg_color: (36/255,100/255,203/255,1)
            text: ' Selecione o Usuário'
            on_release: root.abre_menu()

        MDRectangleFlatButton:
            size_hint: (.15, .08)
            text: 'Entrar'
            font_size: 26
            pos_hint: {'x':0.425, 'y':0.3}
            text_color: (36/255,100/255,203/255,1)
            #line_color: 0, 0, 1, 1
            md_bg_color: (1, 1, 1, 1)
            on_release:
                #app.root.current = 'validar'
                root.verifica_usuario()


<DataWindow>
    name: 'validar'

    FloatLayout:
        size: root.width, root.height

        Image:

        MDIconButton:
            icon: 'arrow-left-bold-outline'
            icon_size: '50dp'
            pos_hint: {'x':0.01, 'y':0.9}
            theme_text_color: "Custom"
            text_color: (36/255,100/255,203/255,1)
            on_press:
                app.root.current = 'login'
                root.manager.transition.direction = 'right'

        Button:
            size_hint: (.5, .8)
            pos_hint: {'x':0.25, 'y':0.10}

        Label:
            text: 'Selecione a Competência:'
            pos_hint: {'x':0.4, 'y':0.75}
            size_hint: (.2, .1)
            color: (1,1,1,1)
            font_size: 50
            font_name: 'Impact'

        Spinner:
            id: spinner_id2
            font_size: 18
            text: root.lista[0]
            values: root.lista
            size_hint: (.2, .05)
            pos_hint: {'x':0.4, 'y':0.65}
            background_normal: ''
            background_color: (36/255,100/255,203/255,1)
            option_cls: Factory.get("MySpinnerOption")
            color: (1,1,1,1)
            on_text: root.mes_selecionado(self.text)

        MDRectangleFlatButton:
            size_hint: (.15, .08)
            text: 'Verificar'
            font_size: 24
            pos_hint: {'x':0.325, 'y':0.5}
            text_color: (36/255,100/255,203/255,1)
            #line_color: 0, 0, 1, 1
            md_bg_color: 1, 1, 1, 1
            on_press:
                root.status()

        MDRectangleFlatButton:
            id: retorno_botao
            size_hint: (.15, .08)
            text: 'Gerar Relatório'
            font_size: 24
            pos_hint: {'x':0.525, 'y':0.5}
            text_color: (36/255,100/255,203/255,1)
            #line_color: 0, 0, 1, 1
            md_bg_color: 1, 1, 1, 1
            on_press:
                app.root.current = 'teste1'
                root.manager.transition.direction = 'left'
                app.meu_popup()

        MDRectangleFlatButton:
            size_hint: (.35, .165)
            pos_hint: {'x':0.325, 'y':0.27}
            #text_color: (36/255,100/255,203/255,1)
            line_color: (36/255,100/255,203/255,1)
            md_bg_color: (36/255,100/255,203/255,1)

        MDIcon:
            icon: root.icone
            pos_hint: {"x": .51, "y": 0.385}
            color: root.cor
            #md_bg_color: (0, 0, 0, 1)

        MDIcon:
            icon: root.icone1
            pos_hint: {"x": .51, "y": 0.335}
            color: root.cor1

        MDIcon:
            icon: root.icone2
            pos_hint: {"x": .51, "y": 0.285}
            color: root.cor2
            #disabled: True

        Label:
            text: root.manager.get_screen('login').lista_usuarios[1]
            font_size: 18
            pos_hint: {'x':0.3, 'y':0.35}
            size_hint: (.2, .1)
            color: (1,1,1,1)

        Label:
            text: root.manager.get_screen('login').lista_usuarios[2]
            font_size: 18
            pos_hint: {'x':0.3, 'y':0.30}
            size_hint: (.2, .1)
            color: (1,1,1,1)

        Label:
            text: root.manager.get_screen('login').lista_usuarios[3]
            font_size: 18
            pos_hint: {'x':0.3, 'y':0.25}
            size_hint: (.2, .1)
            color: (1,1,1,1)

        Label:
            text: root.meu_status
            font_size: 18
            pos_hint: {'x':0.5, 'y':0.35}
            size_hint: (.2, .1)
            color: (1,1,1,1)

        Label:
            text: root.meu_status1
            font_size: 18
            pos_hint: {'x':0.5, 'y':0.30}
            size_hint: (.2, .1)
            color: (1,1,1,1)

        Label:
            text: root.meu_status2
            font_size: 18
            pos_hint: {'x':0.5, 'y':0.25}
            size_hint: (.2, .1)
            color: (1,1,1,1)

        MDRectangleFlatButton:
            id: assina_ger
            size_hint: (.15, .08)
            text: 'Assinar'
            font_size: 24
            pos_hint: {'x':0.425, 'y':0.15}
            text_color: (36/255,100/255,203/255,1)
            #line_color: 0, 0, 1, 1
            md_bg_color: 1, 1, 1, 1
            disabled: not root.status_btn
            on_press:
                root.assina_gestor()


<BoxTeste>:

    on_enter:

        root.validacao()
        app.popupWindow.dismiss()

    name: 'teste1'

    FloatLayout:
        size: root.width, root.height
        id: data_layout

        Image:

        MDIconButton:
            icon: 'arrow-left-bold-outline'
            icon_size: '50dp'
            pos_hint: {'x':0.01, 'y':0.9}
            theme_text_color: "Custom"
            text_color: (36/255,100/255,203/255,1)
            on_press:
                app.root.current = 'validar'
                root.manager.transition.direction = 'right'

        MDRectangleFlatButton:
            size_hint: (.15, .08)
            text: 'Assinar'
            font_size: 24
            pos_hint: {'x':0.42, 'y':0.05}
            text_color: 1, 1, 1, 1
            md_bg_color: (36/255,100/255,203/255,1)
            on_press:
                root.assina()


WindowManager:
    LoginWindow:

    DataWindow:
        id: data_scr

    BoxTeste:
        id: data2